
{{#each errors}}
	<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
	<h3>Edit Video Idea</h3>
	<form action="/ideas/{{idea.id}}?_method=PUT" method="post">
	<input type="hidden" name="_method" value="PUT">
	<div class="form-group">
		<lable for="title">Title</label>
		<input type="text" value={{idea.title}} class="form-control" name="title" required></input>
	</div>
	<br>
	<div class="form-group">
		<lable for="details">Details</label>
		<input type="text" value={{idea.details}} class="form-control" name="details" required></input>
		
	</div>
	<br>
	<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>